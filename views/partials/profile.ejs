<div
  class="mt-[65px] grid grid-cols-12 gap-4 pb-8 pt-0 sm:px-4 sm:pt-8 md:mt-[83px] lg:px-10"
>
  <aside
    class="col-span-12 text-white md:col-span-5 lg:col-span-4 xl:col-span-3"
  >
    <div class="sticky top-[100px] border-b border-white p-4 sm:border">
      <img
        class="mb-3 flex aspect-square h-16 w-16 rounded-full border-2 bg-sky-100 border-[#ae7aff] object-cover"
        src="<%= user.profileImage %>"
        alt="avatar"
      />
      <h2 class="font-bold"><%= user.firstname %> <%= user.lastname %></h2>
      <p class="text-sm opacity-30 leading-none mb-4">@<%= user.username %></p>
      <p class="text-sm"><%= user.tagline %></p>
      <hr class="my-4 h-[1px] w-full" />
      <div class="mb-4">
        <h3 class="mb-1 font-bold">Short Bio</h3>
        <p class="text-sm"><%= user.bio %></p>
      </div>
      <p class="mb-4 flex gap-x-4">
        <span class="inline-block"
          ><span class="font-bold"><%= user.posts.length %> </span
          ><span class="text-sm text-gray-400">Posts</span></span
        >
        <span class="inline-block"
          ><span class="font-bold"><%= user.followers.length %> </span
          ><span class="text-sm text-gray-400">Followers</span></span
        ><span class="inline-block"
          ><span class="font-bold"><%= user.following.length %> </span
          ><span class="text-sm text-gray-400">Following</span></span
        >
      </p>
      <a href="/edit">
        <button
          class="inline-flex w-max items-center bg-[#ae7aff] px-4 py-2 text-center font-bold text-black shadow-[5px_5px_0px_0px_#4f4e4e] transition-all duration-150 ease-in-out active:translate-x-[5px] active:translate-y-[5px] active:shadow-[0px_0px_0px_0px_#4f4e4e]"
        >
          Edit Profile
        </button></a
      >
    </div>
  </aside>
  <section
    class="col-span-12 text-white md:col-span-7 lg:col-span-5 xl:col-span-6"
  >
    <div
      class="sticky top-[82px] z-10 mt-[1px] bg-[#121212] pb-4 before:absolute before:inset-x-0 before:bottom-full before:h-[17px] before:bg-[#121212] md:top-[100px] md:mt-0"
    >
      <ul class="no-scrollbar flex w-full overflow-x-auto px-4 sm:px-0">
        <li class="mr-2 inline-block shrink-0">
          <a href="/profile"
            ><button
              id="posts"
              class="all inline-block bg-[#2c2c2c] hover:bg-[#2c2c2c] px-6 py-1.5"
            >
              Posts
            </button></a
          >
        </li>
        <li class="mr-2 inline-block shrink-0">
          <a href="/edit"
            ><button
              id="edit"
              class="all inline-block px-6 py-1.5 hover:bg-[#2c2c2c]"
            >
              Edit profile
            </button></a
          >
        </li>
        <li class="mr-2 inline-block shrink-0">
          <a href="/upload"
            ><button
              class="all inline-block px-6 py-1.5 hover:bg-[#2c2c2c]"
              onclick="this.classList.toggle('bg-red-500')"
            >
              Create Post
            </button></a
          >
        </li>
        <li class="mr-2 inline-block shrink-0">
          <a href="">

            <button class="all inline-block px-6 py-1.5 hover:bg-[#2c2c2c]">
              Bookmarked
            </button>
          </a>
        </li>
      </ul>
    </div>

